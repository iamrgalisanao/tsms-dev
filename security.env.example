# Security Monitoring Configuration
SECURITY_MONITORING_ENABLED=true
SECURITY_LOG_CHANNEL=security
SECURITY_REDIS_PREFIX=security:

# Login Security
SECURITY_MAX_LOGIN_ATTEMPTS=5
SECURITY_LOGIN_DECAY_MINUTES=15

# Alert Configuration
SECURITY_ALERT_EMAIL_ENABLED=true
SECURITY_ALERT_EMAIL_RECIPIENTS=admin@example.com
SECURITY_ALERT_SLACK_ENABLED=false
SECURITY_ALERT_SLACK_WEBHOOK=

# Event Settings
SECURITY_EVENT_RETENTION_DAYS=90

# Security Integration Settings
SECURITY_CIRCUIT_BREAKER_THRESHOLD=10
SECURITY_CIRCUIT_BREAKER_COOLDOWN=30
SECURITY_RATE_LIMIT_MAX=100
SECURITY_RATE_LIMIT_DECAY=1
